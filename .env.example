# OmNomNom Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================================================
# Supabase Configuration (REQUIRED)
# ==============================================================================
# Get these values from your Supabase project settings:
# https://app.supabase.com/project/_/settings/api

# Public URL for your Supabase project
# Example: https://abcdefghijklmnop.supabase.co
PUBLIC_SUPABASE_URL=your_supabase_project_url

# Anonymous/Public API key (safe to expose in client-side code)
# This key has limited permissions and respects Row Level Security policies
PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ==============================================================================
# Application Configuration (OPTIONAL)
# ==============================================================================

# Node environment (development, production, test)
NODE_ENV=development

# Application base URL (used for OAuth redirects and email links)
# Development: http://localhost:4321
# Production: https://your-domain.com
PUBLIC_APP_URL=http://localhost:4321

# ==============================================================================
# Development Tools (OPTIONAL)
# ==============================================================================

# Enable verbose logging for debugging
# Options: true, false
DEBUG=false

# Enable Supabase local development
# Options: true, false
# Note: Requires Supabase CLI installed
USE_LOCAL_SUPABASE=false

# ==============================================================================
# Future Configuration (Not yet implemented in MVP)
# ==============================================================================

# AI Features (post-MVP)
# OPENROUTER_API_KEY=your_openrouter_api_key

# Image Storage (post-MVP)
# PUBLIC_SUPABASE_STORAGE_BUCKET=recipe-images

# Analytics (post-MVP)
# PUBLIC_ANALYTICS_ID=your_analytics_id
