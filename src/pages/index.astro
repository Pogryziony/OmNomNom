---
import Layout from '../layouts/Layout.astro';
import PublicFeed from '../components/recipes/PublicFeed';
---

<Layout title="OmNomNom">
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-8">
    <div class="mx-auto max-w-3xl space-y-6">
      <h1 class="text-4xl font-bold text-gray-900">
        OmNomNom <span class="text-indigo-600">Recipes</span>
      </h1>
      <PublicFeed client:load />
    </div>
  </main>
</Layout>
